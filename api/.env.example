# Backend Server Port
PORT=3001

# Azure SQL Database Connection Details
# Replace with your actual credentials
DB_SERVER="your-server-name.database.windows.net"
DB_DATABASE="your-database-name"
DB_USER="your-username"
DB_PASSWORD="your-password"

# Secret key for signing JWT tokens
JWT_SECRET="your-very-secret-key"
DB_OPTIONS_ENCRYPT=true
DB_OPTIONS_TRUST_SERVER_CERTIFICATE=false # For Azure, generally set to false unless specific reason

# JWT Secret Key for signing tokens
# This should be a long, random, and secret string
JWT_SECRET=your_super_secret_key_here

